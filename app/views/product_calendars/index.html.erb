<p id="notice"><%= notice %></p>

<h1>Product Calendars</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Date</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_calendars.each do |product_calendar| %>
      <tr>
        <td><%= product_calendar.product_id %></td>
        <td><%= product_calendar.price %></td>
        <td><%= product_calendar.date %></td>
        <td><%= product_calendar.status %></td>
        <td><%= link_to 'Show', product_calendar %></td>
        <td><%= link_to 'Edit', edit_product_calendar_path(product_calendar) %></td>
        <td><%= link_to 'Destroy', product_calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

