<!-- SLIDER -->
<img id="cycle-loader" src="https://s3.amazonaws.com/snowschoolers/images/spinner.gif" alt="loader" />

<ul id="slider">
  <li>
    <!-- <img src="https://s3.amazonaws.com/snowschoolers/images/demo/slider/thredbo-village-resort-hero.jpg" class="bg-photo" alt="" /> -->
    <img src="https://s3.amazonaws.com/snowschoolers/images/demo/slider/sup_Tahoe.jpg" class="bg-photo" alt="" />
    <div class="caption">

      <div class="block">
        <h1>BOOK A GROUP OUTING</h1>
      </div>

      <div class="block">
        <p>Stand Up Paddle Boarding on Lake Tahoe is the perfect team bonding activity for your summer getaway.</p>
      </div>

      <%= semantic_form_for @lesson do |f| %>
        <%= f.semantic_errors :instructor %>
          <div class="block inputs">
            <p>
              <div class="col-md-3">
                <%= f.input :activity, as: :select, collection: ['Ski', 'Snowboard'], include_blank: 'Group Size', label: false %>
              </div>

              <div class="col-md-3">
<!--                 <%= f.input :location, as: :select, collection: ['Alta','Aspen','Beaver Creek','Breckenridge','Deer Valley','Heavenly','Kirkwood','North Star','Park City','Snowbird','Sugar Bowl','Vail'], include_blank: 'Location', label: false %>
 -->                <%= f.input :location, as: :select, collection: ['Mt. Hotham','Falls Creek','Mt. Buller'], include_blank: 'Location', label: false %>
              </div>

              <%= f.semantic_fields_for :lesson_time, @lesson_time do |lt_f| %>
                <div class="col-md-3">
                  <%= lt_f.input :date, as: :string, input_html: { id: 'datepicker' }, placeholder: 'Date', label: false %>
                  <span class="search-area-icon"></span>
                </div>

                <div class="col-md-3">
                  <%= lt_f.input :slot, as: :select, collection: ['Morning', 'Afternoon', 'Full Day'], include_blank: 'Length', label: false %>
                </div>
              <% end %>
            </p>
          </div>

        <%= f.input :state, as: :hidden, input_html: { value: 'new' } %>

        <div class="block">
          <%= f.actions do %>
            <%= f.action :submit, as: :input, button_html: { class: 'btn btn-primary btn-lg', value: 'Book Outing' } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </li>
  <li><img src="https://s3.amazonaws.com/snowschoolers/images/demo/slider/happy.jpg" alt="" /></li>
</ul>
<!-- /SLIDER -->
